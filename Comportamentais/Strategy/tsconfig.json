{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist", // Diretório de saída para os arquivos compilados
    "rootDir": "./src"  // Diretório raiz dos arquivos de entrada
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}